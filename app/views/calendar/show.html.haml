%h2
  = "Details about #{@event.nurse.name} vacation week"

%ul
  %li
    Start date:
    = @event.start_at.strftime("%d/%m/%y")
  %li
    End date:
    = @event.end_at.strftime("%d/%m/%y")
  %li
    -if @event.pto
      This is a PTO segment
    -else
      This is not a PTO segment

= link_to 'Edit vacation week', edit_nurse_calendar_path(@event.nurse, @event)
= button_to 'Delete', nurse_calendar_path(@event.nurse, @event), :method => 'delete', :confirm => 'Are you sure?'
= link_to 'Back to calendar', nurse_calendar_index_path
