%h2 Forgot your password?
#flash
  = devise_error_messages!
#form
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = f.label :email
    = f.email_field :email
    %br
    = f.submit "Reset password", :class => 'submit'
= render "links"

