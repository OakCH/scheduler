!!! 5
%html
  %head
    %title Nurse Scheduler
    = stylesheet_link_tag 'compiled/login'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600'
    = csrf_meta_tags

  %body
    #tempnavi
      %ul
        %li.first
          =link_to_unless_current 'Home', root_path
        %li
          =link_to_unless_current 'Upload', admin_upload_path
        %li
          =link_to_unless_current 'Admin Cal', admin_calendar_path
        %li
          =link_to_unless_current 'Nurse Cal', '/nurse/1/calendar'

    #container
      #login
        #header
          NURSE SCHEDULER
        #content.container
          #welcome
            %p
              Sign in to schedule your vacation hours. If you don't know
              your login/password, please contact your nurse manager.
          #flash
            = render 'shared/flash', :flash => flash
          #form
            =yield
        #footer
          (c) 2012 Team Awesome
