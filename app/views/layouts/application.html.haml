!!! 5
%html
  %head
    %title Nurse Scheduler
    = stylesheet_link_tag 'compiled/application'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600|Merriweather:900'
    = stylesheet_link_tag 'compiled/event_calendar'
    = csrf_meta_tags

  %body
    #container
      #header
        .left
          Nurse Scheduler
        .right
          %ul
            %li.first
              =link_to_unless_current 'Home', root_path
            %li
              =link_to_unless_current 'Upload', admin_upload_path
            %li
              =link_to_unless_current 'Admin Cal', admin_calendar_path
            %li
              =link_to_unless_current 'Nurse Cal', '/nurse/1/calendar'
        .clear
      .separator
      #flash
        = render 'shared/flash', :flash => flash
      #content
        = yield
      .separator
      #footer
        (c) 2012 Team Awesome
